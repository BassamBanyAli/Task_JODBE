@{
    ViewBag.Title = "ImportExcel";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Import Excel File</h2>

<!-- AngularJS Form for File Upload -->
<div ng-app="app" ng-controller="UserImportController">
    <form ng-submit="uploadExcel()" enctype="multipart/form-data">
        <div class="form-group">
            <label for="file">Choose Excel file:</label>
            <input type="file" id="file" class="form-control" ng-model="file" name="file" file-model="file" />
        </div>
        <button type="submit" class="btn btn-primary">Upload</button>
    </form>

    <div ng-if="message">
        <p>{{ message }}</p>
    </div>
</div>